<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" id="adminLoginFragment">
	<Dialog title="{i18n>ADMIN_LOGIN}">
		<l:VerticalLayout class="fragment sapUiContentPadding" width="100%">
			<l:content>
				<Label text="{i18n>EMAIL_ADDRESS}"/>
				<Input value="{oModel>/adminEmail}" />
				<Label text="{i18n>PASSWORD}"/>
				<Input value="{oModel>/password}" type="Password"/>
				<Button press="onSubmitAdminLogin" text="{i18n>LOGIN}" class="onLoginBtn"></Button>
				<Button text="{i18n>CANCEL}" press="onClickCancel"></Button>
			</l:content>
	</l:VerticalLayout>
</Dialog>
</core:FragmentDefinition>